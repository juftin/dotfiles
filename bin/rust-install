#!/bin/bash

set -e

if ! command -v rustup &>/dev/null; then
	echo "Installing Rust and its components ğŸ¦€"
	curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- --no-modify-path -y
	echo "Rust installed successfully ğŸ‰"
else
	echo "Rust is already installed, updating components ğŸ¦€"
	rustup update stable
	echo "Rust components updated successfully ğŸ‰"
fi
